{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File structure
    "rootDir": "./src",
    "outDir": "./dist",

    // Target modern browsers
    "target": "ES6",
    "module": "ES6",

    // Output controls
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type safety
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitAny": true,

    // Misc
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
